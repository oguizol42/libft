#include "libft.h"

static int	cntarr(char const *s, char c)
{
	int	cnt;

	cnt = 0;
	if (s)
	{
		cnt = 1;
		if (c && c != '\0')
		{
			while (ft_strchr(s, c))
			{
				s = ft_strchr(s, c) + 1;
				if (*s != '\0')
					++cnt;
			}
		}
	}
	return (cnt);
}

void	fillarr(char **arr, char const *s, char c, int cnt)
{
	char const	*end;
	int			i;
	size_t		len;

	if (arr)
	{
		end = s;
		i = 0;
		while (i < cnt)
		{
			end = ft_strchr(s, c);
			if (end)
				len = end - s + 1;
			else
				len = ft_strlen(s);
			arr[i] = ft_substr(s, 0, len);
			if (arr[i])
				s = end + 1;
			++i;
		}
		arr[i] = NULL;
	}
}

char	**ft_split(char const *s, char c)
{
	char	**arr;
	int		cnt;

	arr = NULL;
	cnt = cntarr(s, c);
	arr = (char **)malloc(sizeof(char *) * (cnt + 1));
	if (arr)
		fillarr (arr, s, c, cnt);
	return (arr);
}

