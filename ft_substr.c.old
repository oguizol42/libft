#include "libft.h"

char	*ft_substr(char const *s, unsigned int start, size_t len)
{
	unsigned char	cmp;
	char			*newstr;

	newstr = NULL;
	cmp = 0;
	if (s)
	{
		cmp = (unsigned char)start;
		while ((*s != '\0') && (*s != cmp))
			++s;
		if (ft_strlen(s) < len)
			len = ft_strlen(s);
		newstr = (char *)malloc(sizeof(char) * (len + 1));
		if (newstr)
		{
			if (len > 0)
				ft_strlcpy (newstr, s, (len + 1));
			else
				*newstr = '\0';
		}
	}
	return (newstr);
}

